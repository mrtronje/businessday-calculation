root = true

#best practise is lf, sorry notepad users
[*]
end_of_line = lf
insert_final_newline = true

[*.{css,scss,less,sass}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{php,js,json,html,htm,twig,xml,config,gulpfile,asp,aspx,cs,yml,lock}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
